<%= form_for(@page) do |f| %>
	<% if @page.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

			<ul>
				<% @page.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
		<%= f.label :name %>
		<br>
		<%= f.text_field :name, class: "form-control" %>
	</div>
	
	<div class="form-group">
		<%= f.label :content %>
		<br>
		<%= f.text_area :content, class: "form-control", rows: "8" %>
	</div>

	<div class="form-group">
		<%= f.label :sort_index %>
		A value of <%= SortIndex::WELCOME %> will set the page to be the welcome page.
		A value above <%= SortIndex::WELCOME %> will cause the page to be in the navbar.
		The navbar holds the lower sort indexes on the left to the higher sort indexes on the right.
		For example, 1 would be to the left of 2.
		An empty or negative value will cause the page to not be put into the navbar.
		<br>
		<%= f.number_field :sort_index, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :link %>
		If this has a value, the page will redirect to that path.
		For example, to make a page redirect to the Calendar, enter <tt>/calendar</tt>.
		<br>
		<%= f.text_field :link, class: "form-control" %>
	</div>
	
	<div class="actions">
		<%= f.submit class: "btn btn-success" %>
	</div>
<% end %>
