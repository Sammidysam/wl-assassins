<h1>Pages</h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Actions</th>
		</tr>
	</thead>

	<tbody>
		<% @pages.each do |page| %>
			<tr>
				<td><%= page.name %></td>
				<td>
					<div class="btn-group btn-group-xs">
						<%= link_to "Show", page.link || page, class: "btn btn-default btn-xs" if can?(:read, page) %>
						<%= link_to "Edit", edit_page_path(page), class: "btn btn-default btn-xs" if can?(:update, page) %>
						<%= link_to "Destroy", page, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs" if can?(:destroy, page) %>
					</div>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to "New Page", new_page_path, class: "btn btn-default" if can?(:create, Page) %>
