<h1>Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= link_to "Show", page if can?(:read, page) %></td>
        <td><%= link_to "Edit", edit_page_path(page) if can?(:update, page) %></td>
        <td><%= link_to "Destroy", page, method: :delete, data: { confirm: "Are you sure?" } if can?(:destroy, page) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Page", new_page_path if can?(:create, Page) %>
